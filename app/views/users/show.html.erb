<h1><%= @user.name %></h1><br>
<%= link_to "Rediger Profil", edit_user_registration_path ,class:'btn btn-default btn-block' %>
<br>
<div class="row">
  <div class="col-sm-6">
    <p>
      <h3><%= @user.name %></h3>
      <strong>Vår ref: </strong><%= @user.ref %><br>
      <%= @user.foretaks_reg ? 'Foretaksregisteret' : 'Org.nr:' %> <%= @user.org_number %> <%= @user.mva_reg ? 'MVA' : '' %><br>
    </p>
    <p>
      <strong>Email: </strong><%= @user.email %><br>
      <strong>Telefon: </strong><%= @user.phone %><br>
      <strong>Adresse: </strong><%= @user.address %><br>
    </p>
    <p>
      <strong>Bank: </strong><%= @user.bank_name %><br>
      <strong>Kontonummer: </strong><%= @user.bank_account %><br>
      <strong>SWIFT/BIC: </strong><%= @user.bank_swift %><br>
      <strong>IBAN: </strong><%= @user.bank_iban %><br>
    </p>
    <p>
      <strong>Neste fakturanummer: </strong><%= @user.next_invoice_number %>
    </p>
  </div>
  <div class="col-sm-6">
    <h3>Utestående</h3>
    <% if outstanding_count == 0 %>
      <p>Du har ingen utestående fakturaer.</p>
    <% else %>
      <p>
        Du har <%= pluralize(outstanding_count, 'faktura', 'fakturaer') %> utestående, hvorav <%= overdue_count %> er forfalt.
      </p>
      <p>
        <strong>Forfalt beløp: </strong><%= number_to_currency(overdue_amount) %><br>
        <strong>Totalt utestående: </strong><%= number_to_currency(outstanding_amount) %><br>
      </p>
    <% end %>
  </div>
</div>
<hr class="divider">
<div class="row">
  <div class="col-xs-12">
    <h3>Oversikt Utestående Fakturaer</h3>
    <br>
    <% unless @invoices.count == 0 %>
      <%= render partial: 'invoices/partials/invoice_list' %>
    <% end %>
  </div>
</div>