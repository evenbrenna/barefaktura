<h1><%= @user.name %></h1><br>
<%= link_to "Rediger Profil", edit_user_registration_path ,class:'btn btn-default btn-block' %>
<br>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-condensed table-striped table-no-border">
      <tr>
        <td>Vår ref: </td>
        <td><%= @user.ref %></td>
      </tr>
      <tr>
        <td><%= @user.foretaks_reg ? 'Foretaksregisteret' : 'Org.nr' %>: </td>
        <td><%= @user.org_number %> <%= @user.mva_reg ? 'MVA' : '' %></td>
      </tr>
      <tr>
        <td>Epost: </td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>Telefon: </td>
        <td><%= @user.phone %></td>
      </tr>
      <tr>
        <td>Adresse: </td>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <td>Bank: </td>
        <td><%= @user.bank_name %></td>
      </tr>
      <tr>
        <td>Kontonummer: </td>
        <td><%= @user.bank_account %></td>
      </tr>
      <tr>
        <td>SWIFT/BIC: </td>
        <td><%= @user.bank_swift %></td>
      </tr>
      <tr>
        <td>IBAN: </td>
        <td><%= @user.bank_iban %></td>
      </tr>
      <tr>
        <td>Neste fakturanummer: </td>
        <td><%= @user.next_invoice_number %></td>
      </tr>
    </table>
  </div>
</div>
<hr class="divider">
<div class="row">
  <div class="col-xs-12">
    <h3>Oversikt Utestående Fakturaer</h3>
    <br>
    <% unless @invoices.count == 0 %>
      <p>
        Du har <%= pluralize(outstanding_count, 'faktura', 'fakturaer') %> utestående, hvorav <%= overdue_count %> er forfalt.
      </p>
      <p>
        <strong>Totalt utestående: </strong><%= number_to_currency(outstanding_amount) %><br>
        <strong>Forfalt beløp: </strong><%= number_to_currency(overdue_amount) %><br>
      </p>
      <%= render partial: 'invoices/partials/invoice_list' %>
    <% else %>
      <p>Du har ingen utestående fakturaer.</p>
    <% end %>
  </div>
</div>