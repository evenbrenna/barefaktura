<h1>Reset Passord</h1><br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>

  <% unless devise_error_messages!.empty? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, class:"col-sm-3 control-label" %>
    <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Reset Passord", class:'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-9">
    <%= render "devise/shared/links" %>
  </div>
</div>
